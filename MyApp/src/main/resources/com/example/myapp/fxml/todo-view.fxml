<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800" spacing="20" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myapp.controllers.TodoController">
    <Text style="-fx-font-size: 24; -fx-font-weight: bold;" text="TO DO LIST" />

    <!-- Main Layout with Left (Input) and Right (Task List) -->
    <HBox alignment="CENTER" spacing="20">
        <!-- Left Box (Task Input Form) -->
        <VBox alignment="CENTER" spacing="10">
            <TextField fx:id="taskField" promptText="Enter Task" style="-fx-font-size: 16; -fx-pref-width: 250; -fx-border-color: gray; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 10;" />
            <DatePicker fx:id="datePicker" promptText="Select Deadline" style="-fx-font-size: 16; -fx-pref-width: 250; -fx-padding: 10;" />

            <!-- Time Selection (Spinner for Hours and Minutes) -->
            <HBox alignment="CENTER" spacing="10">
                <Text style="-fx-font-size: 16;" text="Select Time" />
                <Spinner fx:id="hourSpinner" style="-fx-font-size: 16; -fx-pref-width: 80;" />
                <Text style="-fx-font-size: 16;" text=":" />
                <Spinner fx:id="minuteSpinner" style="-fx-font-size: 16; -fx-pref-width: 80;" />
            </HBox>

            <Button fx:id="addButton" onAction="#addTask" style="-fx-font-size: 16; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 25; -fx-padding: 10; -fx-font-weight: bold;" text="Add Task" />
        </VBox>

        <!-- Right Box (Task List) with Yellow Border -->
        <VBox alignment="CENTER" spacing="10">
            <Text style="-fx-font-size: 20; -fx-font-weight: bold;" text="Task List" />
            <!-- Add yellow border across the task list -->
            <ListView fx:id="taskList" style="-fx-font-size: 16; -fx-pref-width: 300; -fx-pref-height: 300;                                            -fx-border-color: yellow; -fx-border-width: 2; -fx-border-radius: 10;" />
        </VBox>
    </HBox>

    <!-- Back Button (Bottom-left corner) -->
    <Button fx:id="backButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#goToHomePage" prefHeight="10.0" prefWidth="63.0" style="-fx-font-size: 16; -fx-background-color: #FF6347; -fx-text-fill: white; -fx-border-radius: 25; -fx-padding: 10; -fx-font-weight: bold; -fx-alignment: bottom-left; -fx-pref-width: 100; -fx-pref-height: 40;" text="Back" translateX="-340.0" translateY="10.0" />
</VBox>
