<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="rootPane" prefHeight="600" prefWidth="800" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.example.myapp.controllers.HomePageController">
    <children>
        <!-- Bottom Navigation Bar -->
        <HBox fx:id="navBar" alignment="CENTER" spacing="40" styleClass="nav-bar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <Button fx:id="todoButton" onAction="#goToTodo" prefHeight="50.0" prefWidth="180.0" styleClass="big-button" text="TODO List" />
            <Button fx:id="flashcardButton" onAction="#goToFlashcards" prefHeight="50.0" prefWidth="180.0" styleClass="big-button" text="Flashcards" />
            <Button
                    fx:id="timerButton"
                    onAction="#goToTimer"
                    prefWidth="180" prefHeight="50"
                    styleClass="big-button"
                    text="Timer" />
        </HBox>
    </children>
</AnchorPane>
