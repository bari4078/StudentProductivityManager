<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<AnchorPane fx:id="rootPane" prefWidth="800" prefHeight="600"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.myapp.controllers.HomePageController">
    <children>
        <!-- Bottom Navigation Bar -->
        <HBox fx:id="navBar" alignment="CENTER" spacing="40"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              styleClass="nav-bar">
            <Button text="TODO List" onAction="#goToTodo" fx:id="todoButton" styleClass="big-button"/>
            <Button text="Flashcards" onAction="#goToFlashcards" fx:id="flashcardButton" styleClass="big-button"/>
        </HBox>
    </children>
</AnchorPane>
