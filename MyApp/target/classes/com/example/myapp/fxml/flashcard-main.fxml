<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myapp.controllers.FlashcardMainController">
    <center>
        <AnchorPane fx:id="ContentArea" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </center>
    <left>
        <VBox fx:id="sidebar" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
            <HBox prefHeight="40.0" prefWidth="200.0">
               <children>
                  <Button fx:id="goToHomeButton" mnemonicParsing="false" prefHeight="32.0" prefWidth="200.0" style="                       -fx-background-color: linear-gradient(to bottom, #ded9d1, #cfc9bf);                       -fx-text-fill: #333333;                       -fx-font-family: 'Segoe UI';                       -fx-font-size: 12px;                       -fx-background-radius: 8;                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0.2, 0, 1);                     " text="← Back to Home" />
               </children>
            </HBox>
                <TreeView fx:id="sidebarTreeView" prefHeight="200.0" prefWidth="200.0" style="                                -fx-background-color: #ded9d1;                                -fx-font-family: 'Segoe UI';                                -fx-font-size: 12px;                                -fx-text-fill: #333333;                                -fx-cell-hover-color: rgba(222, 217, 209,0.2);" />
                <HBox prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="addFlashcardButton" mnemonicParsing="false" prefHeight="32.0" prefWidth="100.0" style="                       -fx-background-color: linear-gradient(to bottom, #e8f4ff, #c1e0ff);                       -fx-text-fill: #333333;                       -fx-font-family: 'Segoe UI';                       -fx-font-size: 12px;                       -fx-background-radius: 8;                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0.2, 0, 1);                     " text="Add Flashcard" />
                        <Button fx:id="deleteFlashcardButton" mnemonicParsing="false" prefHeight="32.0" prefWidth="100.0" style="                       -fx-background-color: linear-gradient(to bottom, #ffe8e8, #ffcdcd);                       -fx-text-fill: #333333;                       -fx-font-family: 'Segoe UI';                       -fx-font-size: 12px;                       -fx-background-radius: 8;                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0.2, 0, 1);                     " text="Del Flashcard" />
                    </children>
                </HBox>
                <HBox fx:id="bottombox" prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="addTopicButton" mnemonicParsing="false" prefHeight="32.0" prefWidth="100.0" style="                       -fx-background-color: linear-gradient(to bottom, #e8f4ff, #c1e0ff);                       -fx-text-fill: #333333;                       -fx-font-family: 'Segoe UI';                       -fx-font-size: 12px;                       -fx-background-radius: 8;                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0.2, 0, 1);                     " text="Add Topic" />
                        <Button fx:id="deleteTopicButton" mnemonicParsing="false" prefHeight="32.0" prefWidth="100.0" style="                       -fx-background-color: linear-gradient(to bottom, #ffe8e8, #ffcdcd);                       -fx-text-fill: #333333;                       -fx-font-family: 'Segoe UI';                       -fx-font-size: 12px;                       -fx-background-radius: 8;                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0.2, 0, 1);                     " text="Delete Topic" />
                    </children>
                </HBox>
                <HBox prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="addSubjectButton" mnemonicParsing="false" prefHeight="32.0" prefWidth="100.0" style="                       -fx-background-color: linear-gradient(to bottom, #e8f4ff, #c1e0ff);                       -fx-text-fill: #333333;                       -fx-font-family: 'Segoe UI';                       -fx-font-size: 12px;                       -fx-background-radius: 8;                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0.2, 0, 1);                     " text="Add Subject" />
                        <Button fx:id="deleteSubjectButton" mnemonicParsing="false" prefHeight="32.0" prefWidth="100.0" style="                       -fx-background-color: linear-gradient(to bottom, #ffe8e8, #ffcdcd);                       -fx-text-fill: #333333;                       -fx-font-family: 'Segoe UI';                       -fx-font-size: 12px;                       -fx-background-radius: 8;                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0.2, 0, 1);                     " text="Delete Subject" />
                    </children>
                </HBox>
                <Button fx:id="shuffleFlashcardsButton" mnemonicParsing="false" prefHeight="32.0" prefWidth="200.0" style="                   -fx-background-color: linear-gradient(to bottom, #cfc9bf, #bfb5ac);                   -fx-text-fill: #333333;                   -fx-font-family: 'Segoe UI';                   -fx-font-size: 12px;                   -fx-background-radius: 8;                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0.2, 0, 1);                 " text="Shuffle Flashcards" />
            </children>
        </VBox>
    </left>
</BorderPane>
