<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>


<StackPane fx:id="flashcardStack" fx:controller="com.example.myapp.controllers.FlashcardViewController"
           prefHeight="250.0" prefWidth="400.0"
           xmlns="http://javafx.com/javafx/24.0.1"
           xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <AnchorPane fx:id="frontPane"
                    style="-fx-background-color: linear-gradient(to bottom, #ffffff, #f2f2f2);
                         -fx-background-radius: 15;
                         -fx-border-color: #cccccc;
                         -fx-border-radius: 15;
                         -fx-border-width: 1;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.5, 0, 4);">
            <children>
                <Label fx:id="frontLabel"
                       text="frontText"
                       wrapText="true"
                       alignment="CENTER"
                       textAlignment="CENTER"
                       AnchorPane.topAnchor="20"
                       AnchorPane.bottomAnchor="20"
                       AnchorPane.leftAnchor="20"
                       AnchorPane.rightAnchor="20">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>

        <AnchorPane fx:id="backPane" visible="false"
                    style="-fx-background-color: linear-gradient(to bottom, #ffffff, #f2f2f2);
                         -fx-background-radius: 15;
                         -fx-border-color: #cccccc;
                         -fx-border-radius: 15;
                         -fx-border-width: 1;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.5, 0, 4);">
            <children>
                <Label fx:id="backLabel"
                       text="backText"
                       wrapText="true"
                       alignment="CENTER"
                       textAlignment="CENTER"
                       AnchorPane.topAnchor="20"
                       AnchorPane.bottomAnchor="20"
                       AnchorPane.leftAnchor="20"
                       AnchorPane.rightAnchor="20">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</StackPane>
